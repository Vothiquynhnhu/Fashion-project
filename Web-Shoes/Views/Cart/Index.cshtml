@model IEnumerable<Web_Shoes.Models.ProductInCartModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int total = 0;
    double sumprice = 0;
    int ProductPriceSum = 0;
}

<section class="main-content">
    <div class="row">
        <div class="span9">
            <h4 class="title"><span class="text"><strong>Your</strong> Cart</span></h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Remove</th>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Color</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>

                    
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <div class="one-eight text-center">
                                        <div class="display-tc">
                                            <a href="/cart/remove?productid=@item.ProductId" class="closed"> X</a>
                                        </div>
                                    </div>
                                </td>
                                <td><a href="/productdetail?id=@item.ProductId"><img alt="" src="@item.ProductImg1"></a></td>
                                <td>@item.ProductName</td>
                                <td>@item.Color</td>
                                <td>@item.Size</td>
                                <td><input type="text" placeholder="@item.Quantity" class="input-mini"></td>
                                <td>$@item.ProductPrice</td>
                                @{
                                    int ProductQuantity = item.Quantity;
                                    int ProductPrice = item.ProductPrice;
                                    ProductPriceSum = ProductQuantity * ProductPrice;
                                    sumprice = sumprice + ProductPriceSum;
                                }
                                <td>$@ProductPriceSum</td>
                            </tr>
                        }
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td><strong>$@sumprice</strong></td>
                        </tr>
                    




                </tbody>
            </table>


            
            
            <form asp-action="AddCoupon"  asp-controller="Cart" method="post">
                <table>
                    <tr>
                        <td><strong>Coupon:</strong></td>
                        <td><input type="text" name="Coupon" class="form-control" /></td>
                        <td><input type="submit"  value="Add coupon" class="btn btn-secondary" /></td>
                    </tr>
                </table>
            </form>

            <hr>
            <p class="cart-total right">
                <strong>Sub-Total</strong>:	$ @sumprice<br>
                <strong>Discount:</strong>: 
                @{ 
                    if (ViewBag.PriceCoupon != 0)
                    {
                                <span style="color:green">- $@ViewBag.PriceCoupon</span>
                    }else
                    {
                        <span style="color:red">- $@ViewBag.PriceCoupon</span>
                    }
                }
                <br>
                @{
                    double priceVat = sumprice*17 / 100;

                     sumprice = sumprice + priceVat - @ViewBag.PriceCoupon;
                }
                <strong>VAT (17%)</strong>: $@priceVat<br>
                <strong>Total</strong>: $@sumprice<br>
            </p>
            <hr />
            <p class="buttons center">
                @*<button class="btn" type="button">Update</button>*@
                @*<button class="btn" type="button">Continue</button>*@
                <a href="/" class="btn">Continue</a>
                @*<button class="btn btn-inverse" type="submit" id="checkout">Checkout</button>*@
                <a href="/cart/paid" class="btn btn-inverse">Checkout</a>
            </p>
        </div>
