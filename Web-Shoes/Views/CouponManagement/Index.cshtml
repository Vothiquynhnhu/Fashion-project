@model IEnumerable<Web_Shoes.Entity.Coupons>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin1.cshtml";
}



<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <h2>Users:</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <div class="row">
            <div class="col-lg-12 ">

                <h1>Index</h1>

                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.couponCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.couponPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.couponAmount)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.couponCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.couponPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.couponAmount)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.couponId">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.couponId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!-- /. PAGE INNER  -->
</div>


