<div class="featured-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h1>Featured Product</h1>
        </div>

        <div class="row align-items-center product-slider product-slider-4">

            @{
                foreach (var item in Model)
                {

                    var NameProduct = item.pd_Name;
                    var LengthNameProduct = NameProduct.Length;
                    string NameProduct2;
                    if (LengthNameProduct > 50)
                    {
                        NameProduct2 = NameProduct.Substring(0, LengthNameProduct - 26);
                    }
                    else
                    {
                        NameProduct2 = NameProduct.Substring(0, LengthNameProduct);
                    }
                    NameProduct2 += "...";

                    if (productSlie1A >= 1 && productSlie1A <= 8)
                    {
                        <div class="col-lg-3">
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="/productdetail?id=@item.pd_Id">@NameProduct2</a>
                                    <div class="ratting">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="product-image">
                                    <a href="/productdetail?id=@item.pd_Id">
                                        <img src="@item.pd_Img1" alt="Product Image">
                                    </a>
                                    
                                </div>
                                <div class="product-price">
