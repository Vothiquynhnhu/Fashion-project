@model IEnumerable<Web_Fashion.Entity.CustomerHome>

@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-lg-12">
                <h2>Users:</h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12 ">

                <h1>Customer</h1>

                @*<p>
                    <a asp-action="Create">Create New</a>
                </p>*@
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerHomeName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerHome_CImg)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerHome_CName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerHome_CWork)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerHome_CStar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerHome_CDesription)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerHomeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerHome_CImg)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerHome_CName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerHome_CWork)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerHome_CStar)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerHome_CDesription)
                                </td>
                                <td>
                                    <a asp-action="EditCustomer" asp-route-id="@item.CustomerHomeId">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>